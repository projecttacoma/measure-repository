{
  "include": ["src"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2017",
    "module": "commonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "files": true
  }
}
