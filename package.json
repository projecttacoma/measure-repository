{
  "name": "measure-repository",
  "version": "0.0.1",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build:all": "npm run build --workspaces",
    "check:all": "npm run test --workspace=backend && npm run lint --workspace=backend && npm run prettier --workspace=backend && npm run lint --workspace=frontend && npm run prettier --workspace=backend",
    "lint:all": "npm run lint --workspaces",
    "lint:all-fix": "npm run lint:fix --workspaces",
    "prettier:all": "npm run prettier --workspaces",
    "prettier:all-fix": "npm run prettier:fix --workspaces",
    "start:all": "concurrently \"npm run start --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "test:backend": "npm run test --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "prettier": "^2.8.4"
  }
}
